---
import { SITE_TITLE, SITE_DESCRIPTION } from "../../../consts";
import { getCollection } from "astro:content";
import FormattedDate from "../../../components/FormattedDate.astro";
import Layout from "../../../layouts/Layout.astro";
import Pagination from "../../../components/Pagination.astro";
import { PAGINATION_SIZE } from "../../../consts";

export const prerender = false;

const actualPage: number = Number(Astro.url.searchParams.get("page")) || 1;

const lang = Astro.params.lang;

const posts = (await getCollection("blog"))
    .filter((post) => {
        const { slug } = post;

        const [blog_lang] = slug.match(/[^\/]+/g) || [];

        return blog_lang === lang;
    })
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<Layout title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
    <main>
        <section>
            <div class="search-container">
                <input type="text" id="searchInput" placeholder="Buscar posts..." class="search-input" />
            </div>
            <ul id="postsList">
                {
                    posts
                        .slice((actualPage - 1) * PAGINATION_SIZE, (actualPage - 1) * PAGINATION_SIZE + PAGINATION_SIZE)
                        .map((post) => (
                            <li>
                                <a href={`/${lang}/blog${post.slug.slice(2)}/`}>
                                    <img
                                        width={720}
                                        height={360}
                                        src={post.data.heroImage}
                                        alt=""
                                        style="object-fit: cover; width: 100%; height: 100%;"
                                    />
                                    <h4 class="title">{post.data.title}</h4>
                                    <p class="date">
                                        <FormattedDate date={post.data.pubDate} />
                                    </p>
                                </a>
                            </li>
                        ))
                }
            </ul>
        </section>
        <Pagination total={Math.ceil(posts.length / PAGINATION_SIZE)} current={actualPage} />
    </main>

    <style>
        main {
            width: 960px;
        }
        .search-container {
            margin-bottom: 2rem;
            text-align: center;
        }
        .search-input {
            width: 100%;
            max-width: 400px;
            padding: 12px 16px;
            font-size: 16px;
            border: 2px solid rgb(var(--gray-light));
            border-radius: 8px;
            outline: none;
            transition: border-color 0.2s ease;
        }
        .search-input:focus {
            border-color: rgb(var(--accent));
        }
        ul {
            display: flex;
            flex-wrap: wrap;
            gap: 2rem;
            list-style-type: none;
            margin: 0;
            padding: 0;
        }
        ul li {
            width: calc(50% - 1rem);
        }
        ul li * {
            text-decoration: none;
            transition: 0.2s ease;
        }
        ul li:first-child {
            width: 100%;
            margin-bottom: 1rem;
            text-align: center;
        }
        ul li:first-child img {
            width: 100%;
        }
        ul li:first-child .title {
            font-size: 2.369rem;
        }
        ul li img {
            margin-bottom: 0.5rem;
            border-radius: 12px;
        }
        ul li img {
            margin-bottom: 0.5rem;
            border-radius: 12px;
            aspect-ratio: 2/1;
            object-fit: cover;
            width: 100%;
        }
        .hero-image {
            width: 100%;
            max-width: 1020px;
            margin: 0 auto;
            aspect-ratio: 2/1;
        }

        .hero-image img {
            display: block;
            width: 100%;
            height: 100%;
            object-fit: cover;
            border-radius: 12px;
            box-shadow: var(--box-shadow);
        }

        ul li:first-child img {
            width: 100%;
            max-height: 400px;
        }

        ul li a {
            display: block;
        }
        .title {
            margin: 0;
            color: rgb(var(--black));
            line-height: 1;
        }
        .date {
            margin: 0;
            color: rgb(var(--gray));
        }
        ul li a:hover h4,
        ul li a:hover .date {
            color: rgb(var(--accent));
            .hero-image {
                width: 100%;
                max-width: 1020px;
                margin: 0 auto;
                aspect-ratio: 2/1;
            }

            .hero-image img {
                display: block;
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 12px;
                box-shadow: var(--box-shadow);
            }
        }
        ul a:hover img {
            box-shadow: var(--box-shadow);
        }
        @media (max-width: 720px) {
            ul {
                gap: 0.5em;
            }
            ul li {
                width: 100%;
                text-align: center;
            }
            ul li:first-child {
                margin-bottom: 0;
            }
            ul li:first-child .title {
                font-size: 1.563em;
            }
        }
    </style>

    <script>
        const searchInput = document.getElementById("searchInput")! as HTMLInputElement;
        const postsList = document.getElementById("postsList")!;
        const allPosts = Array.from(postsList.children) as HTMLDivElement[];

        searchInput.addEventListener("input", (e) => {
            const searchTerm = e.target?.value.toLowerCase().trim();

            allPosts.forEach((post) => {
                const title = post.querySelector(".title")?.textContent.toLowerCase();
                if (searchTerm === "" || title?.includes(searchTerm)) {
                    post.style.display = "block";
                } else {
                    post.style.display = "none";
                }
            });
        });
    </script>
</Layout>
