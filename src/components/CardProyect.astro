---
//import { useTranslations, getLangFromUrl } from "../i18n/translate";

interface Props {
    name: string;
    image: string;
    description: string;
    link: string;
}

// TODO: Move proyects to translations files
//const t = useTranslations(getLangFromUrl(Astro.url));

const { name, image, description, link } = Astro.props;
---

<a href={link} target="_blank" class="card">
    <div>
        <img src={image} aria-label=`Imagen de ${name}` />
    </div>
    <div>
        <span>{name}</span>
        <p>{description}</p>
    </div>
</a>

<style lang="scss">
    html.dark .card {
        background-color: rgba(233, 233, 233, 0.45);

        &:hover {
            color: white !important;
        }
    }

    .card {
        background-color: rgb(233, 233, 233);
        padding: 0.5rem 1rem;
        border-radius: 10px;
        display: flex;
        flex-direction: row;
        flex-wrap: wrap;
        gap: 1rem;
        transition:
            transform 300ms ease,
            padding 300ms ease,
            background-color 300ms ease;
        margin: 1rem 0;
        text-decoration: none;
        color: currentColor;

        @media screen and (width < 600px) {
            flex-direction: column;
            justify-content: center;
            text-align: center;
            align-items: center;
            gap: 0;
            padding: 1rem 2rem;
        }

        div:first-child {
            max-width: 90px;

            img {
                width: 100%;
            }
        }

        div:last-child {
            display: flex;
            flex-direction: column;
            gap: 0;

            span {
                font-weight: bold;
                font-size: 1.6rem;
                padding: 0;
            }

            p {
                font-size: 1rem;
                padding: 0;
                margin: 0;
                font-weight: 300;
                text-wrap: balance;
            }
        }

        &:hover {
            background-color: rgba(201, 201, 201, 0.9);
            transform: scale(1.03);
            cursor: pointer;

            div:last-child span {
                text-decoration: underline;
            }
        }
    }
</style>
