---
import { getLangFromUrl } from "../i18n/translate";
import Github from "./svgs/Github.astro";
import Linkedin from "./svgs/Linkedin.astro";
const { name, image, github, linkedin, link, profession, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<div class="card" onclick={`window.location.href='/${lang}${link}'`}>
    <img src=`${image}` alt=`Imagen del integrante ${name}` />
    <div>
        <h2>{name}</h2>
        <h3>{profession}</h3>
        <p>{description}</p>
        <div class="socials">
            <div>
                <a
                    href={`${github}`}
                    target="_blank"
                    aria-label={`Link para github de ${name}`}
                    onclick="event.stopPropagation();">
                    <Github />
                </a>
            </div>
            <div>
                <a
                    href={`${linkedin}`}
                    target="_blank"
                    aria-label={`Link para linkedin de ${name}`}
                    onclick="event.stopPropagation();">
                    <Linkedin />
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --gradient: linear-gradient(45deg, #ff7c7d, #ffda67);
        --card: #39445b;
    }

    .card {
        display: flex;
        align-items: center;
        width: 75vw;
        max-width: 40.625rem;
        padding: 2.75rem 1.875rem 2.75rem 1.25rem;
        background: white;
        box-shadow: 0px 0px 44px -10px rgba(0, 0, 0, 0.55);
        border-radius: 1.5rem;
    }
    html.dark .card {
        background: var(--card);
    }
    .card:hover {
        cursor: pointer;
    }
    .card img {
        max-width: 17.5rem;
        width: 36vw;
        height: 18.75rem;
        object-fit: cover;
        margin-left: -3.75rem;
        margin-right: 1.875rem;
        border-radius: 1.875rem;
        box-shadow: 0 3.75rem 2.5rem rgb(0 0 0 / 8%);
        transition: border-radius 0.3s;
    }

    .card h2 {
        font-size: 1.375rem;
        font-weight: 400;
        margin-top: 0;
        margin-right: 1.875rem;
        margin-bottom: 0.625rem;
    }

    .card h3 {
        font-size: 0.975rem;
        font-weight: 400;
        margin: 0;
        color: black;
    }
    html.dark .card h3 {
        color: black;
    }

    .card p {
        font-size: 1rem;
        font-weight: 400;
        margin-bottom: 1.875rem;
        color: black;
    }
    html.dark .card p {
        color: whitesmoke;
    }

    .socials {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    @media (width <= 37.5rem) {
        .card {
            margin: 0 2.5rem;
            padding-left: 3.125rem;
            padding-right: 3.125rem;
            padding-bottom: 3.75rem;
            width: 100%;
            text-align: center;
            flex-direction: column;
        }

        .card h2 {
            margin-right: 0;
            font-size: 1.625rem;
        }

        .card img {
            margin: -6.25rem 0 1.875rem 0;
            width: 100%;
            max-width: 62.5rem;
            height: 15.625rem;
        }

        .card p {
            max-width: 22.5rem;
        }

        .socials {
            justify-content: center;
        }
    }

    @media (width <= 27.5rem) {
        .card img {
            height: 50vw;
            width: 50vw;
            border-radius: 50%;
            border: 0.75rem solid white;
            box-shadow: none;
            margin: -8.75rem 0 1.875rem 0;
        }
        html.dark .card img {
            border: 0.75rem solid var(--card);
        }
        .card {
            margin: 2.3rem 0;
        }
    }
</style>
