---
import { getLangFromUrl } from "../i18n/translate";
import Github from "./svgs/Github.astro";
import Linkedin from "./svgs/Linkedin.astro";
const { name, image, github, linkedin, link, profession, description } = Astro.props;
const lang = getLangFromUrl(Astro.url);
---

<div class="card" onclick={`window.location.href='/${lang}${link}'`}>
    <div class="card-image-container">
        <img src=`${image}` alt=`Imagen del integrante ${name}` />
        <div class="card-overlay">
            <div class="socials">
                <a
                    href={`${github}`}
                    target="_blank"
                    aria-label={`Link para github de ${name}`}
                    onclick="this.event.stopPropagation();"
                    class="social-link"
                >
                    <Github />
                </a>
                <a
                    href={`${linkedin}`}
                    target="_blank"
                    aria-label={`Link para linkedin de ${name}`}
                    onclick="this.event.stopPropagation();"
                    class="social-link"
                >
                    <Linkedin />
                </a>
            </div>
        </div>
    </div>
    <div class="card-content">
        <h3 class="card-name">{name}</h3>
        <p class="card-profession">{profession}</p>
        <p class="card-description">{description}</p>
    </div>
</div>

<style>
    .card {
        position: relative;
        width: 320px;
        height: 420px;
        background: var(--color-bright-gray-50);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid var(--color-bright-gray-100);
    }

    :global(html.dark) .card {
        background: var(--color-bright-gray-700);
        border: 1px solid var(--color-bright-gray-500);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    }

    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }

    :global(html.dark) .card:hover {
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.4);
    }

    .card-image-container {
        position: relative;
        width: 100%;
        height: 220px;
        overflow: hidden;
    }

    .card img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .card:hover img {
        transform: scale(1.05);
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
        backdrop-filter: blur(8px);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .card:hover .card-overlay {
        opacity: 1;
    }

    .socials {
        display: flex;
        gap: 16px;
    }

    .social-link {
        width: 44px;
        height: 44px;
        background: rgba(255, 255, 255, 0.15);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.4);
    }

    .social-link:hover {
        background: rgba(255, 255, 255, 0.25);
        transform: scale(1.1);
        border-color: rgba(255, 255, 255, 0.6);
    }

    .social-link svg {
        width: 20px;
        height: 20px;
        fill: white;
    }

    .card-content {
        padding: 24px 20px 20px;
        height: calc(100% - 220px);
        display: flex;
        flex-direction: column;
    }

    .card-name {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0 0 8px;
        color: var(--color-bright-gray-950);
        line-height: 1.3;
    }

    :global(html.dark) .card-name {
        color: var(--color-bright-gray-50);
    }

    .card-profession {
        font-size: 0.875rem;
        font-weight: 500;
        margin: 0 0 12px;
        color: var(--accent);
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    :global(html.dark) .card-profession {
        color: var(--color-blue-100);
    }

    .card-description {
        font-size: 0.875rem;
        line-height: 1.5;
        margin: 0;
        color: var(--color-bright-gray-500);
        flex-grow: 1;
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    :global(html.dark) .card-description {
        color: var(--color-bright-gray-100);
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .card {
            width: 280px;
            height: 380px;
        }

        .card-image-container {
            height: 180px;
        }

        .card-content {
            height: calc(100% - 180px);
            padding: 20px 16px 16px;
        }

        .card-name {
            font-size: 1.125rem;
        }

        .socials {
            gap: 12px;
        }

        .social-link {
            width: 40px;
            height: 40px;
        }

        .social-link svg {
            width: 18px;
            height: 18px;
        }
    }

    @media (max-width: 480px) {
        .card {
            width: 100%;
            max-width: 320px;
            height: 360px;
        }

        .card-image-container {
            height: 160px;
        }

        .card-content {
            height: calc(100% - 160px);
            padding: 16px 14px 14px;
        }

        .card-name {
            font-size: 1rem;
        }

        .card-profession {
            font-size: 0.8rem;
        }

        .card-description {
            font-size: 0.8rem;
            -webkit-line-clamp: 3;
        }
    }
</style>
